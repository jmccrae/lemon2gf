
lin
   cl = mkCl $syn.subject.name (mkVP ${name}_V2 $syn.directObject.name) 
   passive = mkCl $syn.directObject.name (passiveVP ${name}_V2) 
   passive_by = mkCl $syn.directObject.name (passiveVP ${name}_V2 $syn.subject.name)
   object_slash = mkClSlash $syn.subject.name (mkVPSlash ${name}_V2) 
   vp = mkVP ${name}_V2 $syn.directObject.name

